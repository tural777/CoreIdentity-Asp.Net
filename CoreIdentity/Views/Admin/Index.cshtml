@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}


<div class="bg-primary text-center text-white m-1 p-1">
    <h2>User List</h2>
</div>


<table class="table table-bordered table-striped table-sm m-1 p-1">
    <tr>
        <th>User Id</th>
        <th>User Name</th>
        <th>Email</th>
    </tr>


    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" class="text-center">No Users</td>
        </tr>
    }
    else
    {
        foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    }
</table>

<a asp-action="Create" class="btn btn-primary">Create User</a>